{% extends 'AppBundle::main.html.twig' %}

{% block title %}Team page!!!{% endblock %}

{% block content %}
    <div class="content team-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6 class="title-table">Состав команды</h6>
                    <ul class="team">
                        {% for value in team.players %}
                            <li><a href="{{ path('player', {'id': value.id }) }}">{{ value.name }}. {{ value.secondName }}</a></li>
                        {% endfor %}
                    </ul>
                    <p>
                        <span>Тренер:
                            <a href="{{ path('trainer', {'id': team.trainer.id}) }}">{{ team.trainer.name }} {{ team.trainer.secondName }}</a>
                        </span><br>
                        <span>Страна:
                            <a href="{{ path('country', {'id': team.country.id}) }}">{{ team.country.name }}</a>
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
{% block titlepage %}<h3 class="text-center">Сборная страны {{ team.country.name }}</h3>{% endblock titlepage %}